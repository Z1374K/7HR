{% extends 'base.html.twig' %}

{% block body %}
    <h1>Position</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ position.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ position.name }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ position.rate }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('position_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('position_edit', { 'id': position.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
